{
  "name": "api",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "email": "email dev --dir src/emails -p 3001",
    "build": "bun run tools/build.ts",
    "db:generate": "bun --bun run drizzle-kit generate",
    "db:push": "bun --bun run drizzle-kit push",
    "db:migrate": "bun --bun run drizzle-kit migrate",
    "auth:generate": "bunx --bun @better-auth/cli generate --output src/lib/db/schema/auth.ts",
    "format": "bunx --bun biome format --write ./src/**/*.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@react-email/components": "^0.5.7",
    "@types/bun": "^1.3.1",
    "better-auth": "^1.3.32",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest",
    "elysia-router": "^1.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^6.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@react-email/preview-server": "4.3.2",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.5",
    "pg": "^8.16.3",
    "react-email": "^4.3.2"
  },
  "module": "src/index.js"
}
